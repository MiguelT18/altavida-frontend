---
import { Icon } from "astro-icon";

interface HeaderProps {
  title: string;
  subtitle: string;
  backgroundImage: string;
}

const { title, subtitle, backgroundImage = "#1b2532" } = Astro.props;
const isImageUrl = /\.(jpeg|jpg|gif|png|webp)$/.test(backgroundImage);
const backgroundStyle = isImageUrl
  ? `url(${backgroundImage})`
  : backgroundImage;
---

<header
  class="text-white flex flex-col items-center justify-end w-full pt-[25vh] pb-28 relative"
  style=`background: ${backgroundStyle}`
>
  <div class="flex items-center justify-center gap-10">
    <slot />
    <a
      href="/"
      class="flex items-center gap-2 hover:bg-white hover:bg-opacity-25 hover:border-white transition-all px-6 py-2 my-4 rounded-md text-sm border-2 border-gray-500"
    >
      <Icon name="ph:house-simple-duotone" class="text-white w-[25px]" />
      <span>Inicio</span>
    </a>
  </div>
  <div class="flex flex-col justify-center items-center">
    <h1 class="text-lg text-center font-my-raleway font-bold uppercase">
      {title}
    </h1>
    <p class="text-sm text-center">{subtitle}</p>
  </div>
</header>

