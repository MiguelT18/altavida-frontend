<style>
  .imageButton_container {
    max-width: 680px;
    margin: 0 auto;
    display: grid;
    justify-items: center;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
    animation: fadeIn 0.2s ease-out;
  }
  .imageButton_container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .imageButton_container a {
    position: relative;
    box-shadow: 0 8px 11px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease-out;
  }
  .imageButton_container a::before {
    position: absolute;
    top: 18px;
    left: 18px;
    width: calc(100% - 35px);
    height: calc(100% - 35px);
    content: "";
    display: block;
    z-index: 2;
    border: 1px solid #fff;
    opacity: 0.8;
  }
  .imageButton_container a::after {
    content: "";
    top: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.75) 0%,
      rgba(81, 165, 194, 0) 100%
    );
  }
  .imageButton_container a:nth-child(2) {
    grid-row-start: 1;
    grid-row-end: 3;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: scale(0.5);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const buttonContainer = document.querySelectorAll(
      ".imageButton_container a",
    );
    const observerOptions = {
      root: null,
      rootMargin: "190px",
      threshold: 0.9,
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        const { isIntersecting } = entry;
        if (isIntersecting) {
          entry.target.classList.add("fade-in");
        } else {
          entry.target.classList.remove("fade-in");
        }
      });
    }, observerOptions);

    buttonContainer.forEach((button) => {
      observer.observe(button);
      button.addEventListener("mouseenter", () => {
        button.classList.remove("to-shrink");
        button.classList.add("to-grow");
      });
      button.addEventListener("mouseleave", () => {
        button.classList.remove("to-grow");
        button.classList.add("to-shrink");
      });
    });
  });
</script>
