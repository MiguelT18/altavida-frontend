              <Image
                format="webp"
                src={RioVidaLogo}
                alt="Alta Mira Logotipo"
                width={80}
                height={80}
              />
            </div>
          </a>
        </div>
      </div>
    </div>
    <div class="swiper-pagination"></div>
  </MainSection>

  <ContactLayout />
</Layout>

<script is:inline>
  new Swiper(".swiper", {
    effect: "cube",
    cubeEffect: {
      slideShadows: false,
    },
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    grabCursor: true,
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
    loop: true,
    autoHeight: true,
  });
</script>

<style>
  .swiper {
    width: 380px;
    height: 100%;
    margin-bottom: 20px;
  }
  .imageButton_container {
    margin: 0 auto;
    animation: fadeIn 0.2s ease-out;
  }
  .imageButton_container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .imageButton_container a {
    position: relative;
    box-shadow: 0 8px 11px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease-out;
  }
  .imageButton_container a::before {
    position: absolute;
    top: 18px;
    left: 18px;
    width: calc(100% - 35px);
    height: calc(100% - 35px);
    content: "";
    display: block;
    z-index: 2;
    border: 1px solid #fff;
    opacity: 0.8;
  }
  .imageButton_container a::after {
    content: "";
    top: 0;
    position: absolute;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.9) 0%,
      rgba(81, 165, 194, 0) 100%
    );
  }
  .imageButton_container a:nth-child(2) {
    grid-row-start: 1;
    grid-row-end: 3;
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const buttonContainer = document.querySelectorAll(
      ".imageButton_container a",
    );
    const observerOptions = {
      root: null,
      rootMargin: "190px",
      threshold: 0.9,
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        const { isIntersecting } = entry;
        if (isIntersecting) {
          entry.target.classList.add("fade-in");
        } else {
          entry.target.classList.remove("fade-in");
        }
      });
    }, observerOptions);

    buttonContainer.forEach((button) => {
      observer.observe(button);
    });
  });
</script>
