<script lang="js">
  document.addEventListener("astro:page-load", () => {
    const modal = document.querySelector("#modal");
    const modalImage = document.querySelector("#modal img");
    const closeModal = document.querySelector("#close-button");
    const openModal = document.querySelectorAll("#teamImage");

    openModal.forEach((open) => {
      open.addEventListener("click", () => {
        const image = open.getAttribute("src");
        modalImage?.setAttribute("src", image);
        modal?.showModal();
        document.body.style.overflow = "hidden";
      });
    });

    closeModal?.addEventListener("click", () => {
      modal?.close();
      document.body.style.overflow = "auto";
    });
  });
</script>

<script lang="js">
  document.addEventListener("astro:page-load", () => {
    const counters = document.querySelectorAll("[data-count]");
    const speed = 800;
    const observerOptions = {
      root: null,
      rootMargin: "180px",
      threshold: 0.9,
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        const { isIntersecting, target } = entry;
        if (isIntersecting) {
          const counter = target;

          const updateCount = () => {
            const target = +counter.getAttribute("data-count");
            const count = +counter.innerText;

            const increment = target / speed;

            if (count < target) {
              counter.innerText = Math.ceil(count + increment).toString();
              setTimeout(updateCount, 1);
            } else {
              counter.innerText = target.toString();
            }
          };

          updateCount();
        } else {
          const counter = target;
          counter.innerText = "0";
        }
      });
    }, observerOptions);

    counters.forEach((counter) => {
      observer.observe(counter);
    });
  });
</script>

<script>
  document.addEventListener("astro:page-load", () => {
    const exitoCards = document.querySelectorAll("#exito-card");
    const galleryContainer = document.querySelector(".teamGallery");
    const observerOptions = {
      root: null,
      rootMargin: "200px",
      threshold: 0.9,
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        const { isIntersecting } = entry;
        if (isIntersecting) {
          entry.target.classList.add("fade-in");
        } else {
          entry.target.classList.remove("fade-in");
        }
      });
    }, observerOptions);

    galleryContainer?.querySelectorAll(".teamImage").forEach((image) => {
      observer.observe(image);
    });
    exitoCards?.forEach((card) => {
      observer.observe(card);
    });
  });
</script>

<style>
  .teamGallery {
    display: grid;
    align-items: stretch;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 0.5rem;
    padding: 1rem;
    max-width: 1080px;
    margin: 0 auto;
  }
  .teamGallery figure {
    transition: transform 0.3s ease-out;
    cursor: pointer;
  }
  .teamGallery figure:hover {
    transform: scale(1.05);
  }
</style>
